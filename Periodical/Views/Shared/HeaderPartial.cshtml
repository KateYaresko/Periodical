<header>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img class="img-brand" src="@Url.Content("~/Content/periodical_img.png")" alt="Periodical" /></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-left">
                    <li class="@ViewBag.NavbarHome">@Html.ActionLink("Home", "Index", new { area = "", controller = "Home" })</li>
                    <li class="@ViewBag.NavbarEditions">@Html.ActionLink("Editions", "Index", new { area = "", controller = "Editions" })</li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="@ViewBag.NavbarProfile">@Html.ActionLink("Profile", "Index", new { area = "User", controller = "Profile" })</li>
                        if(User.IsInRole("Admin"))
                        {
                            <li class="@ViewBag.NavbarUsersManagement">@Html.ActionLink("Users Management", "Index", new { area = "Admin", controller = "Management" })</li>
                        }
                        if(User.IsInRole("Admin") || User.IsInRole("Editor"))
                        {
                            <li class="@ViewBag.NavbarEditionsManagement">@Html.ActionLink("Editions Management", "Index", new { area = "Editor", controller = "Management" })</li>
                        }
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="@ViewBag.NavbarSignout">@Html.ActionLink("Signout", "Signout", new { area = "Security", controller = "Signin" })</li>
                    }
                    else
                    {
                        <li class="@ViewBag.NavbarSignin">@Html.ActionLink("Signin", "Index", new { area = "Security", controller = "Signin" })</li>
                        <li class="@ViewBag.NavbarSignup">@Html.ActionLink("Signup", "Index", new { area = "Security", controller = "Signup" })</li>
                    }
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
</header>